/* pages/info/info.wxss */
page{
  background: #f1f1f1;
}
.header{
  width:100%;
  background: #fff;
}
.header .img{
  width: 100%;
}
.header .info{
  width: 100%;
  padding: 5px 20px 20px 20px;
  box-sizing:border-box;
}
.header .info .title {
  font-size: 18px;
  color: #222;
  margin-top: 10px;
}
.header .info .con {
  font-size: 16px;
  color: #888;
  margin-top: 10px;
}

.header .info .money{
  font-size: 25px;
  color: #333;
}
.header .info text{
  font-size: 14px;
}
.header .info .kucun{
  font-size: 14px;
  color: #999999;
  margin:6px 0 0 0;
  float:right;

}
.tw_icon{
  width: 100%;
}
.tw_icon image{
  width:200px;
  height:41px;
  margin:8px auto;
  display:block;
}

/* 商家信息 */
.sj_info{
  width:100%;
  background:#fff;
  margin-top:15px;
}
.sj_info .title{
  width:100%;
  height:50px;
  border-bottom:1px solid #eee;
}
.sj_info .title view{
  font-size:16px;
  line-height:50px;
  border-left:5px solid #F94819;
  padding-left:20px;
}
.sj_info .con{
  padding:10px 25px 20px 25px;
}
.sj_info .con .img image{
  display:block;
  height:200px;
  width:100%;
  background: #F94819;
  border-radius:10px;
}
.sj_info .con .name{
  margin:20px 0 10px 0;
  font-weight:bold;
}
.sj_info .con .address{
  margin: 8px 0;
}
.sj_info .con .address text,.sj_info .con .phone text{
  margin-left:10px;
  font-size:16px;
  color:#555;
}
.sj_info .con .address image,.sj_info .con .phone image{
  width:20px;
  height:20px;
  position:relative;
  top:3px;
  left:2px;
}

/* 按钮 */
.button{
  width:90%;
  background:linear-gradient(to right, rgb(255, 109, 68) 0%,#F94819 100%);
  height:50px;
  border-radius:41px;
  margin:20px auto;
  position: fixed;
  left: 5%;
  display: flex;
  justify-content: center;
  bottom:0;
}
.button .btn{
  width: 50%;
  height: 50px;
  line-height: 50px;
  color: #fff;
  font-size: 18px;
  text-align: center;
}
.button .goumai{
  border-right: 1px solid  rgb(252, 136, 104);
}
.button .zdj_gm{
  border: none;
  width: 100%;
}

/* 砍价框 */
.kj_box{
  width:100%;
  height:200px;
  background:rgba(0,0,0,0.6);
  position: fixed;
  top: 0;
}
.kj_con{
  width:75%;
  background:#fff;
  border-radius:10px;
  margin:25% auto 0 auto;
  padding-bottom: 25px;
}
.kj_con image{
  width:150px;
  height:150px;
  display:block;
  margin:auto;
  padding-top:20px;
}
.kj_con .text{
  text-align:center;
  line-height:70px;
  font-size:18px;
}
.kj_con .text text{
 color:#F94819;
 font-size: 24px; 
}
.kj_con .yaoqing{
  width:85%;
  background:#F94819;
  height:50px;
  border-radius:41px;
  margin:auto;
  line-height: 50px;
  color: #fff;
  font-size: 18px;
  text-align: center;
}
.kj_box .close image{
  width:45px;
  height:45px;
  margin:20px auto;
  display:block;
}