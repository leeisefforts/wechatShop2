/* pages/business/business.wxss */
page{
  background: #f1f1f1;
}
.info{
  width:95%;
  background:#fff;
  border-radius:10px;
  margin:10px auto;
  overflow:hidden;
}
.row {
  width:100%;
  height:60px;
  border-bottom:1px solid #eee;
}
.row:last-child{
  border: none;
}
.row .row_left{
  width:22%;
  display:inline-block;
  height:60px;
  line-height:60px;
  margin-left:25px;
  float:left;
  font-size:16px;
}
.row .input {
  width:68%;
  display:inline;
  font-size:16px;
  height:34px;
  margin-top:13px;
  float:right;
  color:#888;
}
.button{
  background-color:#007aff;
  color:#fff;
  width:100%;
  text-align:center;
  height:55px;
  line-height:55px;

}