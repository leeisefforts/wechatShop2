/* pages/business/business.wxss */
page{
  background: #f1f1f1;
}
.info{
  width:95%;
  background:#fff;
  border-radius:10px;
  margin:10px auto 20px auto;
  overflow:hidden;
}
.row {
  width:100%;
  height:60px;
  border-bottom:1px solid #eee;
}
.row .row_left{
  width:22%;
  display:inline-block;
  height:60px;
  line-height:60px;
  margin-left:25px;
  float:left;
  font-size:16px;
}
.row .input {
  width:68%;
  display:inline;
  font-size:16px;
  height:34px;
  margin-top:13px;
  float:right;
  color:#888;
}
.add_img{
  width:68%;
  display:inline;
  font-size:16px;
  height:34px;
  margin-top:16px;
  float:right;
}
.add_img image{
  width:30px;
  height:30px;
  float: left;
}
.add_img text{
  display:inline-block;
  line-height:29px;
  text-indent:10px;
}
.sp_list{
 width: 100%
}
.sp_list .con{
  height:60px;
  margin:10px 0;
}
.sp_list .img{
  width:60px;
  height:60px;
  margin:0 10px 0 25px;

  float:left;
}
.sp_list .img image{
  width: 100%;
  height: 100%;
  border-radius:5px;
}
.sp_list .name{
  font-size:14px;
  color:#444;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding-right:15px;
  padding-top:19px;
}
.no_list{
  font-size:16px;
  color:#555;
  text-align:center;
  margin:20px;
}
.button{
  background-color:#F94819;
  color:#fff;
  width:100%;
  text-align:center;
  height:55px;
  line-height:55px;
}
/* 商户中心 */
.sh_top{
  width:100%;
  background:linear-gradient(to top,rgb(252, 132, 99) , #F94819);
  padding-bottom:40px;
}
.sh_top .img{
  width:90%;
  height:200px;
  margin:0 auto;
}
.sh_top .img image{
  width:100%;
  height:100%;
  border:1px solid #fff;
  border-radius: 5px;
}
.sh_info{
  width:90%;
  margin:20px auto 0 auto;
  font-size:16px;
  color:#fff;
}
.sh_info view{
  line-height: 32px;
  position: relative
}
.sh_yue{
  width:95%;
  height:60px;
  background:#fff;
  border-radius:15px;
  position:relative;
  margin:0 auto;
  bottom:30px;
  font-size:18px;
  line-height:31px;
  padding:15px 0 15px 20px;
  box-sizing:border-box;
  color:#333;
}
.sh_yue .yue{
  width:65%;
  float:left;
  border-right:1px solid #f1f1f1;
  box-sizing:border-box;
}
.sh_yue .tx{
  width:35%;
  float:right;
  color:#F94819;
  text-align:center;
}
.sh_con{
  width:95%;
  margin:-15px auto 20px auto;
  background:#fff;
  border-radius:15px;
  padding:10px 20px 0 20px;
  box-sizing:border-box;
  text-align:center;
  font-size:16px;
  color:#666;
}
.sh_con .list{
  width:50%;
  display:inline-block;
  margin:15px 0 20px 0;
}
.sh_con .list .num{
  font-size:24px;
  color:#333;
}
.sh_con .day_num,.sh_con .kjzdd{
  border-right:1px solid #f1f1f1;
  box-sizing:border-box;
}
.sh_con .sys image{
  width:30px;
  height:30px;
}
.sh_con .sys{
  border-top:1px solid #f1f1f1;
  width:100%;
  padding-top:20px;
  margin-top: 0;
}