/* pages/user/user.wxss */
page{
  background: #f1f1f1;
}
.top{
  width:100%;
  height:120px;
  background:linear-gradient(to top,rgb(252, 132, 99) , #F94819);
}
.top .img{
  float:left;
}
.top image{
  width:70px;
  height:70px;
  border-radius:50%;
  border:4px solid #fff;
  margin:21px 20px 0 30px
}
.top .name{
  float:left;
  font-size:22px;
  color:#fff;
  line-height:107px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  width:56%;
}
.kj_dd{
  width:100%;
  height:50px;
  background:#fff;
  margin:20px 0;
  padding:0 20px 0 15px;
  box-sizing:border-box;
  line-height:50px;
  font-size:16px;
}
.kj_dd .jt{
  width:20px;
  height:20px;
  float:right;
  margin-top:15px;
  position: relative
}
.kj_dd .icon{
  width:25px;
  height:25px;
  position:relative;
  top:5px;
  margin-right:10px
}