/**app.wxss**/
page{
  display:block;
  height: 100%;
}
/* 授权 */
.shouquan{
  width:100%;
  background: rgba(0,0,0,0.6);
  position: fixed;
  top: 0;
  z-index: 9;
}
.shouquan .sq_box{
  width:80%;
  background:#fff;
  border-radius:5px;
  margin:20% auto 0 auto;
  padding-bottom: 20px;
}
.shouquan .sq_box .title{
  height:60px;
  border-bottom:1px solid #f3f3f3;
  font-size:20px;
  color:#444;
  text-align:center;
  line-height:60px;
  margin-bottom:15px;
}
.shouquan .sq_box .tishi,.shouquan .sq_box .tishi2{
  font-size:16px;
  color:#666;
  text-align:center;
  margin-bottom:5px;
}
.shouquan .sq_box .img{
  width:232px;
  height:200px;
  display:block;
  margin:20px auto; 
}
.shouquan .sq_box .btn,.shouquan .sq_box .shengji{
  width:80%;
  border-radius:37px;
  background:#F94819;
  color:#fff;
  height: 46px;
  line-height: 46px;
  font-size:18px;
  text-align: center;
}

/* top */
.fh_top{
  width:50px;
  height:50px;
  font-size:14px;
  color:#fff;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  position: fixed;
  right: 10px;
  bottom: 20px;
  text-align: center;
}
.fh_top .jt{
  height:20px;
}
.fh_top .jt image{
  width:15px;
  height:15px;
  margin-top:6px;
}
.fh_top .text{

}

/* 商家信息 */
.sj_info{
  width:100%;
  background:#fff;
  margin-top:15px;
}
.sj_info .title{
  width:100%;
  height:50px;
  border-bottom:1px solid #eee;
}
.sj_info .title view{
  font-size:16px;
  line-height:50px;
  border-left:5px solid #F94819;
  padding-left:20px;
}
.sj_info .con{
  padding:10px 25px 20px 25px;
}
.sj_info .con .img image{
  display:block;
  height:200px;
  width:100%;
  background: #F94819;
  border-radius:10px;
}
.sj_info .con .name{
  margin:20px 0 10px 0;
  font-weight:bold;
}
.sj_info .con .address{
  margin: 8px 0;
}
.sj_info .con .address text,.sj_info .con .phone text{
  margin-left:10px;
  font-size:16px;
  color:#555;
}
.sj_info .con .address image,.sj_info .con .phone image{
  width:20px;
  height:20px;
  position:relative;
  top:3px;
  left:2px;
}
.sj_info .con .phone text{
  color: #F94819;
}
/* 回首页 */
.home{
  position:fixed;
  width:84px;
  height:40px;
  background:#F94819;
  border-radius:0 30px 30px 0;
  top:20px;
  line-height:40px;
  font-size:16px;
  color:#fff;
  z-index:1;
}